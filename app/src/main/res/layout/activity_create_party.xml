<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.thepartyon.cliqbac.CreatePartyActivity"
    android:background="@android:color/transparent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textImeMultiLine"
        android:ems="10"
        android:id="@+id/partyTitle"
        android:hint="@string/party_title_hint"
        android:textAlignment="center"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:drawableRight="@drawable/ic_mode_edit"
        android:drawablePadding="-25dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inviteFriendsButton"
        android:text="@string/inviteFriendsButton"
        android:background="#52a83c"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:drawableRight="@drawable/ic_chevron_right"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:drawablePadding="-50dp"
        android:textSize="@dimen/abc_text_size_medium_material" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/locationEditText"
        android:focusableInTouchMode="false"
        android:windowSoftInputMode="stateHidden"
        android:hint="@string/location_edit_text"
        android:padding="30dp"
        android:background="@android:drawable/edit_text"
        android:linksClickable="false"
        android:textAlignment="center"
        android:drawableRight="@drawable/ic_edit_location"
        android:layout_alignParentStart="true"
        android:drawablePadding="-25dp"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/inviteFriendsButton"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/startTimeEditText"
        android:background="@android:drawable/edit_text"
        android:focusableInTouchMode="false"
        android:windowSoftInputMode="stateHidden"
        android:hint="@string/time_edit_text"
        android:paddingBottom="10dp"
        android:padding="30dp"
        android:textAlignment="center"
        android:drawableRight="@drawable/ic_alarm"
        android:drawablePadding="-25dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/locationEditText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/startDateEditText"
        android:focusableInTouchMode="false"
        android:windowSoftInputMode="stateHidden"
        android:hint="@string/date_edit_text"
        android:padding="30dp"
        android:background="@android:drawable/edit_text"
        android:linksClickable="false"
        android:textAlignment="center"
        android:drawableRight="@drawable/ic_date_range"
        android:drawablePadding="-25dp"
        android:layout_above="@+id/startTimeEditText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/descriptionEditText"
        android:layout_above="@+id/startDateEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:layout_marginTop="30dp"
        android:hint="@string/description_edit_text"
        android:textAlignment="center"
        android:drawableRight="@drawable/ic_mode_edit"
        android:drawablePadding="-50dp"
        android:autoText="true" />

</RelativeLayout>
